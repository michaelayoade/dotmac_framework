# pnpm workspace configuration for DotMac Frontend
# Enable hoisting and shared dependencies to reduce duplication

# Force all dependencies to be hoisted to workspace root
hoist-pattern=*

# Enable shamefully hoisted dependencies for maximum deduplication
shamefully-hoist=true

# Use strict peer dependencies to ensure compatibility
strict-peer-dependencies=false

# Enable node linker for better performance
node-linker=hoisted

# Auto install peer dependencies
auto-install-peers=true

# Save exact versions to prevent version conflicts
save-exact=true

# Disable side effects cache for cleaner builds
side-effects-cache=false

# Enable workspace resolution
link-workspace-packages=true

# Use fastest resolution algorithm
resolution-mode=highest
