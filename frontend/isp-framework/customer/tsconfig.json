{
  "extends": "@dotmac/typescript-config/nextjs.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "bundler",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/app/*": ["./src/app/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/stores/*": ["./src/stores/*"],
      "@/types/*": ["./src/types/*"],
      "@dotmac/ui": ["../../packages/ui/src"],
      "@dotmac/ui/*": ["../../packages/ui/src/*"],
      "@dotmac/headless": ["../../packages/headless/src"],
      "@dotmac/headless/*": ["../../packages/headless/src/*"],
      "@dotmac/mapping": ["../../packages/mapping/src"],
      "@dotmac/mapping/*": ["../../packages/mapping/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "playwright.config.ts",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
