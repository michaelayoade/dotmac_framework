{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "remoteCache": {
    "enabled": true
  },
  "pipeline": {
    
    // === FOUNDATION LAYER (Parallel) ===
    "build:foundation": {
      "dependsOn": [],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "!src/**/*.test.*", "!src/**/*.spec.*"],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    
    // === TYPE CHECKING (Parallel with builds) ===
    "type-check": {
      "dependsOn": [],
      "inputs": ["src/**/*.{ts,tsx}", "tsconfig.json", "**/*.d.ts"],
      "outputs": [],
      "cache": true
    },
    
    // === PACKAGE BUILD LAYERS ===
    "build:base-packages": {
      "dependsOn": ["^build:foundation"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "!src/**/*.test.*"],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    
    "build:ui-packages": {
      "dependsOn": ["^build:base-packages", "build:foundation"],
      "outputs": ["dist/**", "storybook-static/**"],
      "inputs": ["src/**", "!src/**/*.test.*"],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    
    "build:logic-packages": {
      "dependsOn": ["^build:ui-packages", "build:base-packages"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "!src/**/*.test.*"],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    
    // === APPLICATION BUILDS ===
    "build": {
      "dependsOn": ["^build:logic-packages", "^build:ui-packages", "type-check"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "inputs": ["src/**", "public/**", "!src/**/*.test.*"],
      "cache": true,
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    
    // === DEVELOPMENT ===
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build:logic-packages"]
    },
    
    // === TESTING OPTIMIZATION ===
    "test:unit": {
      "dependsOn": ["type-check"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.{ts,tsx}", "**/*.test.{ts,tsx}", "**/*.spec.{ts,tsx}"],
      "cache": true
    },
    
    "test:integration": {
      "dependsOn": ["^build:base-packages", "type-check"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.{ts,tsx}", "**/*.integration.test.{ts,tsx}"],
      "cache": true
    },
    
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "inputs": ["**/*.e2e.test.{ts,tsx}", "playwright.config.ts"],
      "cache": true
    },
    
    // === LINTING & FORMATTING (Parallel) ===
    "lint": {
      "dependsOn": [],
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "eslint.config.*"],
      "outputs": [],
      "cache": true
    },
    
    "format": {
      "dependsOn": [],
      "inputs": ["**/*.{ts,tsx,js,jsx,json,css,md}", ".prettierrc*"],
      "outputs": [],
      "cache": true
    },
    
    // === STORYBOOK OPTIMIZATION ===
    "storybook:build": {
      "dependsOn": ["^build:ui-packages"],
      "outputs": ["storybook-static/**"],
      "inputs": ["src/**/*.stories.*", ".storybook/**"],
      "cache": true
    },
    
    // === RELEASE PIPELINE ===
    "build:ci": {
      "dependsOn": ["build", "test:unit", "lint", "type-check"],
      "outputs": [".next/**", "dist/**"],
      "cache": true
    },
    
    "build:release": {
      "dependsOn": ["build:ci", "test:integration"],
      "cache": false,
      "outputs": [".next/**", "dist/**"]
    }
  },
  
  "globalEnv": ["NODE_ENV", "CI", "VERCEL_ENV"],
  
  // === CACHE OPTIMIZATION ===
  "cacheConfig": {
    "signature": true,
    "remote": {
      "enabled": true
    }
  }
}