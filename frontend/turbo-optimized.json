{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "type-check"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV"],
      "inputs": ["src/**", "!src/**/*.test.*", "!src/**/*.spec.*"],
      "cache": true
    },
    "build:optimized": {
      "dependsOn": ["^build", "type-check"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV", "ANALYZE", "BUNDLE_ANALYZE"],
      "inputs": ["src/**", "!src/**/*.test.*", "!src/**/*.spec.*"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.{ts,tsx}", "**/*.test.{ts,tsx}", "**/*.spec.{ts,tsx}"],
      "cache": true
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "**/*.{ts,tsx,js,jsx}"],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.{ts,tsx}", "**/*.{ts,tsx}", "!**/*.test.*", "!**/*.spec.*"],
      "outputs": [],
      "cache": true
    },
    "type-check:fast": {
      "inputs": ["src/**/*.{ts,tsx}", "**/*.{ts,tsx}", "!**/*.test.*", "!**/*.spec.*"],
      "outputs": [],
      "cache": true
    },
    "format": {
      "cache": false,
      "inputs": ["**/*.{ts,tsx,js,jsx,json,css,md}"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "bundle-analyze": {
      "dependsOn": ["build:optimized"],
      "outputs": ["bundle-report/**"],
      "cache": false
    }
  },
  "remoteCache": {
    "signature": true
  },
  "globalEnv": ["NODE_ENV", "ANALYZE", "BUNDLE_ANALYZE"]
}
