    "recharts": "^2.8.0",
    "framer-motion": "^10.16.16"
  },
  "devDependencies": {
    "@dotmac/testing": "workspace:*",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "typescript": "^5.3.3",
    "tsup": "^8.0.2",
    "jest": "^29.7.0"
