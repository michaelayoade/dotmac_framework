{
  "name": "@dotmac/dashboard",
  "version": "1.0.0",
  "description": "Universal Dashboard Components - Portal-Agnostic DRY Architecture",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
