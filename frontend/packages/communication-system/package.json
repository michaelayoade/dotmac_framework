{
  "name": "@dotmac/communication-system",
  "version": "1.0.0",
  "description": "Universal communication system with multi-channel messaging, templates, and unified interface for dotmac platform",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.294.0",
    "framer-motion": "^10.16.0",
    "@dotmac/primitives": "workspace:*",
    "@dotmac/headless": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@dotmac/typescript-config": "workspace:*",
    "@dotmac/governance": "workspace:*",
    "typescript": "^5.2.0",
    "tsup": "^8.0.0",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "eslint": "^8.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "keywords": [
    "react",
    "communication",
    "messaging",
    "chat",
    "email",
    "sms",
    "notifications",
    "templates",
    "dotmac",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dotmac-framework/frontend.git",
    "directory": "packages/communication-system"
  },
  "license": "MIT"
}
