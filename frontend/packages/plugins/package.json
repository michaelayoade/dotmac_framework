{
  "name": "@dotmac/plugins",
  "version": "1.0.0",
  "description": "Plugin management system for the DotMac Framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@dotmac/headless": "workspace:*",
    "@dotmac/auth": "workspace:*",
    "@dotmac/primitives": "workspace:*",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.263.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/jest": "^29.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "tsup": "^7.0.0",
    "eslint": "^8.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dotmac-framework/frontend.git",
    "directory": "packages/plugins"
  },
  "keywords": [
    "plugins",
    "plugin-system",
    "dotmac",
    "extensibility",
    "architecture"
  ],
  "author": "DotMac Framework Team",
  "license": "MIT"
}
