{
  "name": "@dotmac/mobile",
  "version": "1.0.0",
  "description": "Mobile/PWA optimization utilities and components for DotMac platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./offline": {
      "types": "./dist/offline/index.d.ts",
      "import": "./dist/offline/index.mjs",
      "require": "./dist/offline/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    },
    "./pwa": {
      "types": "./dist/pwa/index.d.ts",
      "import": "./dist/pwa/index.mjs",
      "require": "./dist/pwa/index.js"
    },
    "./camera": {
      "types": "./dist/camera/index.d.ts",
      "import": "./dist/camera/index.mjs",
      "require": "./dist/camera/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --write",
    "format": "biome format src/ --write",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest"
  },
  "dependencies": {
    "@dotmac/headless": "workspace:*",
    "@dotmac/primitives": "workspace:*",
    "dexie": "^4.0.8",
    "idb": "^8.0.0",
    "workbox-window": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "react-hook-form": "^7.48.2",
    "zod": "^3.22.4",
    "framer-motion": "^10.16.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0"
  },
  "devDependencies": {
    "@dotmac/typescript-config": "workspace:*",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/jest-dom": "^6.4.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
