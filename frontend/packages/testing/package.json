{
  "name": "@dotmac/testing",
  "version": "1.0.0",
  "description": "Comprehensive testing utilities and framework for DotMac components",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./jest-setup": "./dist/jest/setup.js",
    "./jest-config": "./dist/jest/config.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.5.1",
    "jest-axe": "^8.0.0",
    "axe-core": "^4.8.3",
    "@axe-core/react": "^4.8.3",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.10.5"
  },
  "devDependencies": {
    "@dotmac/typescript-config": "workspace:*",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@types/jest-axe": "^3.5.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "jest": ">=29.0.0"
  }
}
