{
  "name": "@dotmac/patterns",
  "version": "1.0.0",
  "description": "Component composition patterns and advanced data display components for DotMac platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./data-display": {
      "types": "./dist/data-display/index.d.ts",
      "import": "./dist/data-display/index.mjs",
      "require": "./dist/data-display/index.js"
    },
    "./composition": {
      "types": "./dist/composition/index.d.ts",
      "import": "./dist/composition/index.mjs",
      "require": "./dist/composition/index.js"
    }
  },
  "scripts": {
    "prebuild": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build": "tsup",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@dotmac/primitives": "workspace:*",
    "@dotmac/security": "workspace:*",
    "@dotmac/registry": "workspace:*",
    "@tanstack/react-table": "^8.11.8",
    "@tanstack/react-virtual": "^3.0.1",
    "@hello-pangea/dnd": "^16.5.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "react-window": "^1.8.8",
    "react-window-infinite-loader": "^1.0.9"
  },
  "devDependencies": {
    "@dotmac/typescript-config": "workspace:*",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@types/react-window": "^1.8.8",
    "@types/react-window-infinite-loader": "^1.0.6",
    "@types/hello-pangea__dnd": "^16.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
