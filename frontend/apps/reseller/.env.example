# DotMac Reseller Portal - Environment Configuration
# Copy this file to .env.local and customize for your environment

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api
NEXT_PUBLIC_API_VERSION=v1

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration (Server-side secrets)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-min-32-chars
NEXTAUTH_SECRET=your-nextauth-secret-key-min-32-chars

# JWT Public Configuration
NEXT_PUBLIC_JWT_ISSUER=dotmac-platform
NEXT_PUBLIC_JWT_AUDIENCE=dotmac-reseller
NEXT_PUBLIC_SESSION_TIMEOUT=3600

# =============================================================================
# SECURITY
# =============================================================================
# CSRF Protection
NEXT_PUBLIC_CSRF_ENABLED=true

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NEXT_PUBLIC_APP_NAME="DotMac Reseller Portal"
NEXT_PUBLIC_APP_DESCRIPTION="ISP Reseller Partner Portal"
NEXT_PUBLIC_APP_VERSION=1.0.0

# Portal Configuration
NEXT_PUBLIC_PORTAL_TYPE=reseller
NEXT_PUBLIC_TENANT_ID=default

# =============================================================================
# FEATURES
# =============================================================================
NEXT_PUBLIC_ENABLE_MFA=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_COMMISSION_TRACKING=true
NEXT_PUBLIC_ENABLE_WHITE_LABEL=true

# =============================================================================
# DEVELOPMENT
# =============================================================================
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_DEBUG_ENABLED=false
# Mock data policy: Only enabled for tests, real API for dev and production
NEXT_PUBLIC_MOCK_DATA=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Chat Service
NEXT_PUBLIC_CHAT_URL=ws://localhost:3001
NEXT_PUBLIC_CHAT_ENABLED=true

# Commission & Payments
NEXT_PUBLIC_COMMISSION_RATE=10.0
NEXT_PUBLIC_PAYMENT_SCHEDULE=monthly

# Support Contact Information
NEXT_PUBLIC_SUPPORT_EMAIL=partners@yourcompany.com
NEXT_PUBLIC_SUPPORT_PHONE=1-555-PARTNER

# File Upload
NEXT_PUBLIC_UPLOAD_MAX_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# =============================================================================
# MONITORING
# =============================================================================
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ERROR_REPORTING=true

# =============================================================================
# THEMING
# =============================================================================
NEXT_PUBLIC_THEME=reseller
NEXT_PUBLIC_BRAND_COLOR=#8B5CF6

# =============================================================================
# LOCALIZATION
# =============================================================================
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr
