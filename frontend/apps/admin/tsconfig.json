{
  "extends": "@dotmac/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/app/*": ["./src/app/*"],
      "@dotmac/headless": ["../../packages/headless/src"],
      "@dotmac/headless/*": ["../../packages/headless/src/*"],
      "@dotmac/styled-components/admin": ["../../packages/styled-components/src/admin"],
      "@dotmac/styled-components/admin/*": ["../../packages/styled-components/src/admin/*"],
      "@dotmac/primitives": ["../../packages/primitives/src"],
      "@dotmac/primitives/*": ["../../packages/primitives/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
