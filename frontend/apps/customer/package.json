{
  "name": "@dotmac/customer-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3001 --hostname 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --write",
    "format": "biome format src/ --write",
    "type-check": "tsc --noEmit",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "test:unit": "jest --config=jest.config.js --testPathPattern=\"\\.test\\.[jt]sx?$\"",
    "test:integration": "jest --config=jest.config.js --testPathPattern=\"\\.integration\\.test\\.[jt]sx?$\"",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:security": "playwright test tests/security/ --config=playwright.config.ts",
    "test:security:report": "playwright test tests/security/ --config=playwright.config.ts --reporter=html",
    "test:all": "node scripts/test-runner.js",
    "test:ci": "SKIP_E2E=true node scripts/test-runner.js",
    "analyze": "ANALYZE=true npm run build",
    "size": "size-limit",
    "perf:lighthouse": "lhci autorun",
    "perf:build": "npm run build && npm run size",
    "perf:monitor": "node scripts/performance-monitor.js",
    "perf:analyze": "npm run build && npm run analyze && npm run size",
    "audit:bundle": "npm run build && npx webpack-bundle-analyzer .next/static/chunks/*.js",
    "audit:deps": "npm audit --audit-level moderate",
    "build:profile": "NEXT_PROFILE=true npm run build"
  },
  "dependencies": {
    "@dotmac/headless": "workspace:*",
    "@dotmac/primitives": "workspace:*",
    "@dotmac/styled-components": "workspace:*",
    "@dotmac/mapping": "workspace:*",
    "next": "^14.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.363.0",
    "recharts": "^2.12.2",
    "socket.io-client": "^4.7.5",
    "leaflet": "^1.9.4",
    "react-leaflet": "^4.2.1",
    "d3": "^7.8.5",
    "framer-motion": "^10.16.16",
    "web-vitals": "^3.5.0",
    "@sentry/nextjs": "^7.92.0"
  },
  "devDependencies": {
    "@dotmac/typescript-config": "workspace:*",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "@types/leaflet": "^1.9.8",
    "@types/d3": "^7.4.3",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "@dotmac/testing": "workspace:*",
    "jest": "^29.7.0",
    "@swc/jest": "^0.2.29",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/user-event": "^14.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "@playwright/test": "^1.40.1",
    "msw": "^2.0.11",
    "@next/bundle-analyzer": "^14.0.4",
    "webpack-bundle-analyzer": "^4.10.1",
    "size-limit": "^11.0.1",
    "@size-limit/preset-app": "^11.0.1"
  }
}
