{
  "name": "@dotmac/technician-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3003 --hostname 0.0.0.0",
    "build": "npm run validate:config && next build",
    "build:dev": "NODE_ENV=development npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:profile": "NODE_ENV=production npm run build -- --profile",
    "start": "next start",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --write",
    "format": "biome format src/ --write",
    "type-check": "tsc --noEmit",
    "validate:config": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"CommonJS\",\"moduleResolution\":\"node\",\"esModuleInterop\":true,\"verbatimModuleSyntax\":false}' node -r ts-node/register -e \"require('./src/lib/config/build-validator').validateBuildConfiguration()\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "perf:lighthouse": "lighthouse http://localhost:3003 --output=json --output-path=./lighthouse-report.json",
    "perf:bundlesize": "npx bundlesize"
  },
  "dependencies": {
    "@dotmac/headless": "workspace:*",
    "@dotmac/providers": "workspace:*",
    "@dotmac/mapping": "workspace:*",
    "@dotmac/navigation-system": "workspace:*",
    "@dotmac/mobile": "workspace:*",
    "@dotmac/portal-components": "workspace:*",
    "@dotmac/network": "workspace:*",
    "@dotmac/collaboration": "workspace:*",
    "@dotmac/assets": "workspace:*",
    "@tanstack/react-query": "^5.85.5",
    "next": "^14.2.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.363.0",
    "framer-motion": "^10.16.16",
    "react-hook-form": "^7.48.2",
    "@hookform/resolvers": "^3.3.2",
    "zod": "^3.22.4",
    "idb": "^8.0.0",
    "jsqr": "^1.4.0",
    "react-webcam": "^7.1.1",
    "react-signature-canvas": "^1.0.6",
    "dexie": "^3.2.4",
    "@capacitor/core": "^5.5.1",
    "@capacitor/geolocation": "^5.0.6",
    "@capacitor/camera": "^5.0.7",
    "@capacitor/device": "^5.0.6",
    "@capacitor/network": "^5.0.6",
    "workbox-window": "^7.0.0",
