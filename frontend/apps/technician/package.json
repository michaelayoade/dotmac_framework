    "@sentry/nextjs": "^7.99.0",
    "web-vitals": "^3.5.2"
  },
  "devDependencies": {
    "@dotmac/typescript-config": "workspace:*",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "@types/react-signature-canvas": "^1.0.5",
    "@types/leaflet": "^1.9.8",
    "@types/d3": "^7.4.3",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@next/bundle-analyzer": "^14.2.31",
