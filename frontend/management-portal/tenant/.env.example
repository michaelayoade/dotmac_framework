# Environment Variables Template for Tenant Portal
# Copy this file to .env.local and update with your actual values

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NEXT_PUBLIC_APP_NAME="DotMac Tenant Portal"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_PORTAL_TYPE="tenant"

# Environment (development, staging, production)
NODE_ENV="development"
NEXT_PUBLIC_ENVIRONMENT="development"

# ============================================================================
# API ENDPOINTS
# ============================================================================
# Management Platform API URL
MANAGEMENT_API_URL="http://localhost:8000"
NEXT_PUBLIC_MANAGEMENT_API_URL="http://localhost:8000"

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL="ws://localhost:8001"

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# JWT Secret Key (minimum 32 characters)
JWT_SECRET_KEY="your-super-secret-jwt-key-at-least-32-characters-long"

# Session Configuration
SESSION_SECRET="your-session-secret-key-at-least-32-characters-long"
SESSION_MAX_AGE="86400" # 24 hours in seconds

# CSRF Protection
CSRF_SECRET="your-csrf-secret-key-at-least-32-characters-long"

# Cookie Domain (only set in production)
# NEXT_PUBLIC_COOKIE_DOMAIN=".yourdomain.com"

# ============================================================================
# DEVELOPMENT SETTINGS (Development Only)
# ============================================================================
# Mock API responses (development only)
MOCK_API_ENABLED="true"
MOCK_DELAY_MS="1000"

# Development tenant information (for testing only)
# These should be configured through the management platform in production
DEV_TENANT_ID=""
DEV_TENANT_NAME=""
DEV_TENANT_DISPLAY=""
DEV_TENANT_SLUG=""

# ============================================================================
# SITE CONFIGURATION
# ============================================================================
# Site URL (used for redirects and absolute URLs)
NEXT_PUBLIC_SITE_URL="http://localhost:3003"

# Support and Contact
NEXT_PUBLIC_SUPPORT_EMAIL="support@dotmac.cloud"
NEXT_PUBLIC_SUPPORT_PHONE="+1-800-DOTMAC"

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features
NEXT_PUBLIC_FEATURE_BILLING_ENABLED="true"
NEXT_PUBLIC_FEATURE_ANALYTICS_ENABLED="true"
NEXT_PUBLIC_FEATURE_SUPPORT_CHAT="false"
NEXT_PUBLIC_FEATURE_MFA_ENABLED="false"

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=""
SENTRY_DSN=""

# Payment Processing (if billing enabled)
STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""

# Email Service
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@dotmac.cloud"

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Debug mode
DEBUG="false"
NEXT_PUBLIC_DEBUG="false"

# Enable development tools
NEXT_PUBLIC_DEV_TOOLS="true"

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL="info" # error, warn, info, debug
LOG_FORMAT="combined" # combined, common, dev

# ============================================================================
# RATE LIMITING
# ============================================================================
# Login attempts per window
RATE_LIMIT_LOGIN_ATTEMPTS="5"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes

# API rate limiting
RATE_LIMIT_API_REQUESTS="100"
RATE_LIMIT_API_WINDOW_MS="60000" # 1 minute

# ============================================================================
# CONTENT SECURITY POLICY
# ============================================================================
# CSP Configuration
CSP_REPORT_URI="/api/csp-report"
CSP_REPORT_ONLY="false"

# Allowed domains for CSP
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline' fonts.googleapis.com"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' fonts.gstatic.com"
CSP_CONNECT_SRC="'self' api.dotmac.cloud"

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================
# Build configuration
BUILD_ANALYZE="false"
BUNDLE_ANALYZER="false"

# Health check endpoint
HEALTH_CHECK_TOKEN="your-health-check-token"

# ============================================================================
# BACKUP AND DISASTER RECOVERY
# ============================================================================
# Backup settings (if applicable)
BACKUP_ENABLED="false"
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"