{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": false,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules", ".next", "dist"]
}
