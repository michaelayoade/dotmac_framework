# DotMac Management-Reseller Environment Configuration
# Copy this file to .env.local and fill in the appropriate values

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Management Platform API URL
NEXT_PUBLIC_MANAGEMENT_API_URL=http://localhost:8000
MANAGEMENT_API_URL=http://localhost:8000

# Application Configuration
NEXT_PUBLIC_APP_NAME="DotMac Reseller Management"
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_PORTAL_TYPE=management-reseller

# Environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3004

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# Database (if needed for API routes)
DATABASE_URL=postgresql://user:password@localhost:5432/management_db

# Redis (for sessions/caching)
REDIS_URL=redis://localhost:6379/0

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_TRAINING=true
ENABLE_TERRITORIES=true

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Security
CSRF_SECRET=your-csrf-secret-here
SESSION_SECRET=your-session-secret-here

# External Services
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ANALYTICS_TRACKING_ID=GA_MEASUREMENT_ID

# =============================================================================
# PRODUCTION-SPECIFIC VARIABLES
# =============================================================================
# These should only be set in production environment

# NEXT_PUBLIC_MANAGEMENT_API_URL=https://api.management.dotmac.com
# MANAGEMENT_API_URL=https://internal-api.management.dotmac.com
# NEXT_PUBLIC_APP_URL=https://management.dotmac.com
# DATABASE_URL=postgresql://prod_user:prod_password@prod-db:5432/management_prod
# REDIS_URL=redis://prod-redis:6379/0

# =============================================================================
# STAGING-SPECIFIC VARIABLES  
# =============================================================================
# These should only be set in staging environment

# NEXT_PUBLIC_MANAGEMENT_API_URL=https://api-staging.management.dotmac.com
# MANAGEMENT_API_URL=https://internal-api-staging.management.dotmac.com
# NEXT_PUBLIC_APP_URL=https://management-staging.dotmac.com