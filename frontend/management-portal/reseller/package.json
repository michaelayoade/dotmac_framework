{
  "name": "@dotmac/management-reseller",
  "version": "0.1.0",
  "description": "DotMac Management Platform - Reseller Network Management Portal",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3004",
    "build": "next build",
    "start": "next start --port 3004",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --config jest.unit.config.js",
    "test:unit:watch": "jest --config jest.unit.config.js --watch",
    "test:unit:coverage": "jest --config jest.unit.config.js --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:component": "jest --config jest.component.config.js",
    "test:component:watch": "jest --config jest.component.config.js --watch",
    "test:component:coverage": "jest --config jest.component.config.js --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:smoke": "playwright test --config playwright.smoke.config.ts",
    "test:e2e:full": "playwright test --config playwright.full.config.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:component && npm run test:e2e:smoke",
    "test:all:full": "npm run test:unit:coverage && npm run test:integration:coverage && npm run test:component:coverage && npm run test:e2e:full"
  },
