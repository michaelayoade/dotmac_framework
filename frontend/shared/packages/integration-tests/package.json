{
  "name": "@dotmac/integration-tests",
  "version": "1.0.0",
  "private": true,
  "description": "Integration tests for DotMac ISP Framework frontend components",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@dotmac/headless": "workspace:*",
    "@dotmac/primitives": "workspace:*",
    "@dotmac/styled-components": "workspace:*",
    "@tanstack/react-query": "^5.17.19",
    "@tanstack/react-table": "^8.11.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.303.0",
    "date-fns": "^3.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test-setup.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": {
            "jsx": "react-jsx",
            "esModuleInterop": true,
            "allowSyntheticDefaultImports": true
          }
        }
      ]
    },
    "moduleNameMapper": {
      "^@dotmac/headless/(.*)$": "<rootDir>/../headless/src/$1",
      "^@dotmac/primitives/(.*)$": "<rootDir>/../primitives/src/$1",
      "^@dotmac/styled-components/(.*)$": "<rootDir>/../styled-components/src/$1",
      "^@dotmac/(.*)$": "<rootDir>/../$1/src",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.{ts,tsx}",
      "<rootDir>/src/**/*.integration.test.{ts,tsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/test-setup.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
