{
  "name": "@dotmac/http-client",
  "version": "1.0.0",
  "description": "Centralized HTTP client with X-Tenant-ID injection, auth, retries, and error normalization",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "js-cookie": "^3.0.5",
    "@dotmac/auth": "*"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.6",
    "typescript": "^5.9.2",
    "tsup": "^8.3.5",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "@testing-library/jest-dom": "^6.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dotmac-framework/frontend.git",
    "directory": "packages/http-client"
  },
  "keywords": [
    "http",
    "client",
    "axios",
    "tenant",
    "auth",
    "retry",
    "error-handling",
    "dotmac"
  ],
  "author": "DotMac Framework Team",
  "license": "MIT"
}