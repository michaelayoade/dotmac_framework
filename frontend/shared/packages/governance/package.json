{
  "name": "@dotmac/governance",
  "version": "1.0.0",
  "description": "Architectural governance tools for DotMac Frontend",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "dotmac-lint": "./bin/dotmac-lint.js",
    "dotmac-migrate": "./bin/dotmac-migrate.js",
    "dotmac-analyze": "./bin/dotmac-analyze.js"
  },
  "files": [
    "dist/**",
    "bin/**",
    "eslint-rules/**",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.15.0",
    "@typescript-eslint/experimental-utils": "^5.62.0",
    "glob": "^11.0.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.6",
    "fs-extra": "^11.2.0",
    "jscodeshift": "^17.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.9.2",
    "tsup": "^8.3.5",
    "eslint": "^8.57.1",
    "jest": "^29.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dotmac-framework/frontend.git",
    "directory": "packages/governance"
  },
  "keywords": [
    "eslint",
    "governance",
    "architecture",
    "linting",
    "migration",
    "dotmac"
  ],
  "author": "DotMac Framework Team",
  "license": "MIT"
}
