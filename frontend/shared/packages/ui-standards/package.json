{
  "name": "@dotmac/ui-standards",
  "version": "1.0.0",
  "description": "Standard error/loading shells, PWA patterns, and UX standards for DotMac Framework",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@dotmac/ui": "*",
    "@dotmac/http-client": "*",
    "clsx": "^2.1.1",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.460.0",
    "react-error-boundary": "^4.0.11"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@storybook/react": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "typescript": "^5.9.2",
    "tsup": "^8.3.5",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dotmac-framework/frontend.git",
    "directory": "packages/ui-standards"
  },
  "keywords": [
    "react",
    "ui",
    "ux",
    "standards",
    "loading",
    "error",
    "pwa",
    "performance",
    "dotmac"
  ],
  "author": "DotMac Framework Team",
  "license": "MIT"
}