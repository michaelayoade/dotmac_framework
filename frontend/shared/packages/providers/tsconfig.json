{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@dotmac/primitives": ["../primitives/src"],
      "@dotmac/primitives/*": ["../primitives/src/*"],
      "@dotmac/ui": ["../ui/src"],
      "@dotmac/ui/*": ["../ui/src/*"],
      "@dotmac/headless": ["../headless/src"],
      "@dotmac/headless/*": ["../headless/src/*"]
    }
  },
  "include": ["src/**/*"]
}
