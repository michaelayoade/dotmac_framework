{
  "name": "@dotmac/providers",
  "version": "1.0.0",
  "description": "Universal provider system for DotMac Framework",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@tanstack/react-query": "^5.59.20",
    "@dotmac/auth": "workspace:*",
    "@dotmac/rbac": "workspace:*",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "typescript": "^5.9.2",
    "tsup": "^8.3.5",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dotmac-framework/frontend.git",
    "directory": "packages/providers"
  },
  "keywords": [
    "react",
    "providers",
    "context",
    "state-management",
    "dotmac"
  ],
  "author": "DotMac Framework Team",
  "license": "MIT"
}
