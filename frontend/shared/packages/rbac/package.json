{
  "name": "@dotmac/rbac",
  "version": "1.0.0",
  "description": "Universal Role-Based Access Control system for DotMac Framework",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "README.md"
  ],
  "scripts": {
    "prebuild": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build": "tsup src/index.ts --format cjs,esm --clean",
    "dev": "tsup src/index.ts --format cjs,esm --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@dotmac/auth": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "typescript": "^5.9.2",
    "tsup": "^8.3.5",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dotmac-framework/frontend.git",
    "directory": "packages/rbac"
  },
  "keywords": [
    "react",
    "rbac",
    "authorization",
    "permissions",
    "access-control",
    "dotmac"
  ],
  "author": "DotMac Framework Team",
  "license": "MIT"
}
