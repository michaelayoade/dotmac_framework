{
  "name": "@dotmac/journey-orchestration",
  "version": "0.1.0",
  "description": "Customer journey orchestration and cross-package integration for DotMac ISP framework",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./orchestrator": {
      "import": "./dist/orchestrator.mjs",
      "require": "./dist/orchestrator.js",
      "types": "./dist/orchestrator.d.ts"
    },
    "./analytics": {
      "import": "./dist/analytics.mjs",
      "require": "./dist/analytics.js",
      "types": "./dist/analytics.d.ts"
    },
    "./handoffs": {
      "import": "./dist/handoffs.mjs",
      "require": "./dist/handoffs.js",
      "types": "./dist/handoffs.d.ts"
    },
    "./events": {
      "import": "./dist/events.mjs",
      "require": "./dist/events.js",
      "types": "./dist/events.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@dotmac/headless": "workspace:*",
    "@dotmac/crm": "workspace:*",
    "@dotmac/workflows-system": "workspace:*",
    "@dotmac/business-logic": "workspace:*",
    "@dotmac/billing-system": "workspace:*",
    "@dotmac/field-ops": "workspace:*",
    "@dotmac/support-system": "workspace:*",
    "@dotmac/auth": "workspace:*",
    "@dotmac/monitoring": "workspace:*",
    "rxjs": "^7.8.1",
    "eventemitter3": "^5.0.1",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@dotmac/typescript-config": "workspace:*",
    "@dotmac/eslint-config": "workspace:*",
    "@types/lodash": "^4.14.200",
    "typescript": "^5.2.2",
    "tsup": "^7.2.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "keywords": [
    "journey-orchestration",
    "customer-lifecycle",
    "integration-platform",
    "workflow-automation",
    "conversion-analytics",
    "handoff-management",
    "event-driven",
    "isp-operations"
  ],
  "author": "DotMac Framework",
  "license": "MIT"
}
