{
  "extends": "@dotmac/typescript-config/react-library.json",
  "include": ["src/**/*", "src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "verbatimModuleSyntax": false,
    "composite": true,
    "declaration": true,
    "outDir": "dist"
  }
}
