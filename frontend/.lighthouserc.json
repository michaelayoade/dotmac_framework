{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "pnpm --filter @dotmac/admin-app build && pnpm --filter @dotmac/admin-app start",
      "startServerReadyPattern": "Ready on",
      "url": [
        "http://localhost:3000",
        "http://localhost:3000/login",
        "http://localhost:3000/dashboard"
      ],
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        },
        "screenEmulation": {
          "mobile": false,
          "width": 1350,
          "height": 940,
          "deviceScaleFactor": 1,
          "disabled": false
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.85 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.9 }],
        "categories:seo": ["error", { "minScore": 0.85 }],

        "// Core Web Vitals": "Enforce Google's Core Web Vitals thresholds",
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["error", { "maxNumericValue": 200 }],

        "// Performance Metrics": "Key performance indicators",
        "first-contentful-paint": ["error", { "maxNumericValue": 1800 }],
        "speed-index": ["error", { "maxNumericValue": 3400 }],
        "interactive": ["error", { "maxNumericValue": 5200 }],

        "// Security Headers": "Enforce security best practices",
        "csp-xss": ["error"],
        "is-on-https": ["error"],

        "// Resource Optimization": "Ensure efficient resource loading",
        "unused-javascript": ["warn", { "maxNumericValue": 100000 }],
        "unused-css-rules": ["warn", { "maxNumericValue": 20000 }],
        "render-blocking-resources": ["error"],
        "uses-responsive-images": ["warn"],
        "uses-webp-images": ["warn"],
        "efficient-animated-content": ["warn"],
        "legacy-javascript": ["warn"],

        "// Accessibility Requirements": "WCAG compliance",
        "color-contrast": ["error"],
        "image-alt": ["error"],
        "label": ["error"],
        "link-name": ["error"],
        "button-name": ["error"],
        "document-title": ["error"],
        "html-has-lang": ["error"],
        "valid-lang": ["error"],

        "// SEO Fundamentals": "Basic SEO requirements",
        "meta-description": ["error"],
        "http-status-code": ["error"],
        "crawlable-anchors": ["error"],
        "robots-txt": ["warn"],

        "// Progressive Web App": "PWA basics where applicable",
        "viewport": ["error"],
        "without-javascript": ["warn"],
        "installable-manifest": ["warn"]
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "reportFilenamePattern": "%%PATHNAME%%-%%DATETIME%%-report.%%EXTENSION%%"
    }
  }
}
