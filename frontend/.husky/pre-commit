#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting with auto-fix
echo "ğŸ“ Running ESLint with auto-fix..."
pnpm run lint:fix || {
  echo "âŒ ESLint auto-fix encountered issues that need manual attention"
  echo "ğŸ’¡ Please review and fix the remaining linting errors"
  exit 1
}

# Run type checking
echo "ğŸ” Running TypeScript type check..."
pnpm run type-check || {
  echo "âŒ TypeScript type checking failed"
  echo "ğŸ’¡ Please fix type errors before committing"
  exit 1
}

# Run format check
echo "ğŸ¨ Running Prettier format check..."
pnpm format --check || {
  echo "âŒ Code formatting issues found"
  echo "ğŸ’¡ Running Prettier to fix formatting..."
  pnpm format
  echo "âœ… Code formatted. Please add the changes and commit again."
  exit 1
}

# Check for composition orchestration patterns (basic check)
echo "ğŸ¼ Checking for composition patterns..."
if grep -r "complexity.*1[0-9]" packages/*/src --exclude-dir=node_modules; then
  echo "âš ï¸  High complexity functions detected. Consider using composition orchestration."
  echo "ğŸ’¡ Review the composition patterns in src/patterns/composition.ts"
fi

echo "âœ… All pre-commit checks passed!"