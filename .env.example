# DotMac SaaS Platform Environment Configuration
# Copy this to .env and update the values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-minimum-32-chars

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://dotmac_user:dotmac_password@localhost:5432/dotmac_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# =============================================================================
# CORS & SECURITY
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:3003","http://localhost:3004"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# =============================================================================
# PORTAL URLS (Multi-tenant architecture)
# =============================================================================
ADMIN_PORTAL_URL=https://admin.dotmac-isp.local:3000
CUSTOMER_PORTAL_URL=https://customer.dotmac-isp.local:3001
RESELLER_PORTAL_URL=https://reseller.dotmac-isp.local:3003
TECHNICIAN_PORTAL_URL=https://technician.dotmac-isp.local:3004

# =============================================================================
# EXTERNAL SERVICES (Optional - for production features)
# =============================================================================
# EMAIL_SERVICE_API_KEY=your-email-service-api-key
# SMS_SERVICE_API_KEY=your-sms-service-api-key
# PAYMENT_STRIPE_API_KEY=your-stripe-api-key
# CLOUD_AWS_ACCESS_KEY=your-aws-access-key

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
RELOAD=true
WORKERS=1