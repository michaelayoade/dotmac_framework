# EditorConfig for DotMac Framework
# Ensures consistent formatting across editors and IDEs
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # Black's default

# YAML files (GitHub Actions, configs)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# TOML files (pyproject.toml, etc.)
[*.toml]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false  # Allow two trailing spaces for line breaks
max_line_length = 80

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Makefile (must use tabs)
[Makefile]
indent_style = tab
indent_size = 4

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2

# Web files (if we add frontend components)
[*.{html,css,js,ts}]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 4