# DotMac Management Platform Environment Configuration

# Application Settings
ENVIRONMENT=development
APP_NAME="DotMac Management Platform"
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://mgmt_user:mgmt_password@localhost:5432/mgmt_platform
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# PostgreSQL Database Credentials (for Docker)
POSTGRES_USER=mgmt_user
POSTGRES_PASSWORD=mgmt_password
POSTGRES_DB=mgmt_platform

# Redis Configuration
REDIS_URL=redis://:redis_password@localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_PASSWORD=redis_password

# Celery Configuration
CELERY_BROKER_URL=redis://:redis_password@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:redis_password@localhost:6379/2
CELERY_WORKER_CONCURRENCY=4

# Security Configuration
SECRET_KEY=development-secret-key-change-in-production
JWT_SECRET_KEY=development-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:3002"]

# Multi-tenant Configuration
ENABLE_TENANT_ISOLATION=true
MAX_TENANTS_PER_INSTANCE=1000
DEFAULT_TENANT_TIER=small

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# External Service Integration
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder
STRIPE_TEST_MODE=true

SENDGRID_API_KEY=SG.placeholder
SENDGRID_FROM_EMAIL=noreply@dotmac.app

# AWS Configuration (for deployment tasks)
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION=us-east-1

# Kubernetes Configuration
KUBERNETES_CONFIG_PATH=/path/to/kubeconfig
KUBERNETES_NAMESPACE_PREFIX=dotmac-tenant

# OpenBao/Vault Configuration
VAULT_URL=http://localhost:8200
VAULT_TOKEN=mgmt-root-token

# Monitoring Configuration
ENABLE_METRICS=true
SIGNOZ_ENDPOINT=localhost:4317
SIGNOZ_ACCESS_TOKEN=

# Development Tools (Docker Compose)
COMPOSE_PROJECT_NAME=dotmac-mgmt