# =============================================================================
# DotMac Management Platform - Production Environment Template
# =============================================================================
# Copy this file to .env.production and customize for your deployment
#
# SECURITY WARNING: Never commit the actual .env.production file to version control
# This template shows the structure - replace ALL values with actual secrets
# =============================================================================

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application Secrets (REQUIRED - Generate secure random values)
SECRET_KEY=REPLACE_WITH_SECURE_RANDOM_KEY_AT_LEAST_64_CHARACTERS_LONG_FOR_PRODUCTION
JWT_SECRET_KEY=REPLACE_WITH_DIFFERENT_SECURE_JWT_KEY_AT_LEAST_64_CHARACTERS_LONG
WEBHOOK_SECRET=REPLACE_WITH_WEBHOOK_SECRET_FOR_EXTERNAL_INTEGRATIONS

# =============================================================================
# Database Configuration - PostgreSQL with High Availability
# =============================================================================
POSTGRES_USER=dotmac_admin
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_DATABASE_PASSWORD
POSTGRES_DB=dotmac_production
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD

# =============================================================================
# Monitoring Configuration
# =============================================================================
SIGNOZ_ENDPOINT=https://signoz.yourdomain.com:4317
SIGNOZ_ACCESS_TOKEN=REPLACE_WITH_SIGNOZ_ACCESS_TOKEN
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_SECURE_GRAFANA_PASSWORD

# =============================================================================
# External Services
# =============================================================================
STRIPE_SECRET_KEY=sk_live_REPLACE_WITH_LIVE_STRIPE_SECRET_KEY
SENDGRID_API_KEY=SG.REPLACE_WITH_SENDGRID_API_KEY

# =============================================================================
# Cloud Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_ACCESS_KEY
BACKUP_S3_BUCKET=dotmac-production-backups

# =============================================================================
# Domain Configuration
# =============================================================================
MAIN_DOMAIN=yourdomain.com
CORS_ORIGINS=["https://admin.yourdomain.com","https://app.yourdomain.com"]

# =============================================================================
# Multi-tenant Configuration
# =============================================================================
MAX_TENANTS_PER_INSTANCE=1000