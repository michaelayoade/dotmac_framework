# Production environment test configuration
# For smoke tests and production validation (READ-ONLY)

# Core Configuration
ENVIRONMENT=test-production
DEBUG=false
LOG_LEVEL=WARNING

# Production Service URLs (READ-ONLY testing)
ISP_SERVICE_URL=https://api.dotmac.com
MANAGEMENT_SERVICE_URL=https://mgmt.dotmac.com
CUSTOMER_SERVICE_URL=https://customer.dotmac.com
BILLING_SERVICE_URL=https://billing.dotmac.com
NOTIFICATION_SERVICE_URL=https://notifications.dotmac.com

# Test Configuration (SMOKE TESTS ONLY)
PYTEST_MARKERS=smoke
TEST_TIMEOUT=60
MAX_TEST_RETRIES=1
ENABLE_TEST_ENDPOINTS=false
SKIP_EMAIL_VERIFICATION=false
ENABLE_MOCK_PAYMENTS=false
ENABLE_MOCK_NOTIFICATIONS=false

# READ-ONLY operations only
READ_ONLY_MODE=true
NO_DATA_MODIFICATION=true
NO_ACCOUNT_CREATION=true

# Minimal performance testing (non-disruptive)
PERFORMANCE_TEST_DURATION=5
PERFORMANCE_MAX_USERS=5
PERFORMANCE_SPAWN_RATE=1

# Security Configuration (use production secrets for read operations)
JWT_SECRET_KEY=${PRODUCTION_JWT_SECRET_KEY}
ENCRYPTION_KEY=${PRODUCTION_ENCRYPTION_KEY}

# No cleanup needed (no data created)
AUTO_CLEANUP=false
CLEANUP_ON_SUCCESS=false
CLEANUP_ON_FAILURE=false

# Production-specific settings
REAL_EMAIL_TESTING=false
REAL_PAYMENT_TESTING=false
MONITORING_ENABLED=true
TRACE_SAMPLING_RATE=0.01

# Safety limits
MAX_CONCURRENT_TESTS=2
RATE_LIMIT_ENABLED=true
RESPECT_RATE_LIMITS=true

# Alert on any failures in production tests
ALERT_ON_FAILURE=true
SLACK_WEBHOOK_URL=${PRODUCTION_ALERT_WEBHOOK}
EMAIL_ALERTS=${PRODUCTION_ALERT_EMAIL}