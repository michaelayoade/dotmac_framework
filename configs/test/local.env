# Local development test environment configuration
# Use this for running tests on local development machines

# Core Configuration
ENVIRONMENT=test-local
DEBUG=true
LOG_LEVEL=DEBUG

# Test Database Configuration
DATABASE_URL=postgresql+asyncpg://dotmac_test:test_password_123@localhost:5434/dotmac_test
TEST_DATABASE_URL=postgresql+asyncpg://dotmac_test:test_password_123@localhost:5434/dotmac_test

# Redis Configuration
REDIS_URL=redis://localhost:6380/0
REDIS_TEST_URL=redis://localhost:6380/1

# Message Queue Configuration
CELERY_BROKER_URL=pyamqp://dotmac_test:test_password_123@localhost:5673/dotmac_test
CELERY_RESULT_BACKEND=redis://localhost:6380/2

# OpenBao Configuration
OPENBAO_URL=http://localhost:8201
OPENBAO_TOKEN=test-root-token
USE_OPENBAO=true

# Test Configuration
PYTEST_MARKERS=unit,integration
TEST_TIMEOUT=120
MAX_TEST_RETRIES=2
ENABLE_TEST_ENDPOINTS=true
SKIP_EMAIL_VERIFICATION=true
ENABLE_MOCK_PAYMENTS=true
ENABLE_MOCK_NOTIFICATIONS=true

# Performance Testing
PERFORMANCE_TEST_DURATION=30
PERFORMANCE_MAX_USERS=50
PERFORMANCE_SPAWN_RATE=5

# Security Testing
JWT_SECRET_KEY=test-jwt-secret-key-for-local-testing-only
ENCRYPTION_KEY=test-encryption-key-32-chars-long

# Cleanup Configuration
AUTO_CLEANUP=true
CLEANUP_ON_SUCCESS=true
CLEANUP_ON_FAILURE=true