# Staging environment test configuration
# For testing against staging deployments

# Core Configuration
ENVIRONMENT=test-staging
DEBUG=false
LOG_LEVEL=INFO

# Staging Service URLs
ISP_SERVICE_URL=https://staging-isp.dotmac.internal
MANAGEMENT_SERVICE_URL=https://staging-mgmt.dotmac.internal
CUSTOMER_SERVICE_URL=https://staging-customer.dotmac.internal
BILLING_SERVICE_URL=https://staging-billing.dotmac.internal
NOTIFICATION_SERVICE_URL=https://staging-notifications.dotmac.internal

# Test Database Configuration (staging test DB)
DATABASE_URL=${STAGING_TEST_DATABASE_URL}
TEST_DATABASE_URL=${STAGING_TEST_DATABASE_URL}

# Redis Configuration (staging test Redis)
REDIS_URL=${STAGING_TEST_REDIS_URL}
REDIS_TEST_URL=${STAGING_TEST_REDIS_URL}/1

# Message Queue Configuration
CELERY_BROKER_URL=${STAGING_TEST_RABBITMQ_URL}
CELERY_RESULT_BACKEND=${STAGING_TEST_REDIS_URL}/2

# OpenBao Configuration (staging)
OPENBAO_URL=${STAGING_OPENBAO_URL}
OPENBAO_TOKEN=${STAGING_OPENBAO_TOKEN}
USE_OPENBAO=true

# Test Configuration (comprehensive for staging)
PYTEST_MARKERS=integration,e2e,journey
TEST_TIMEOUT=300
MAX_TEST_RETRIES=3
ENABLE_TEST_ENDPOINTS=false
SKIP_EMAIL_VERIFICATION=false
ENABLE_MOCK_PAYMENTS=false
ENABLE_MOCK_NOTIFICATIONS=false

# Performance Testing (realistic load)
PERFORMANCE_TEST_DURATION=60
PERFORMANCE_MAX_USERS=100
PERFORMANCE_SPAWN_RATE=10

# Security Configuration (use staging secrets)
JWT_SECRET_KEY=${STAGING_JWT_SECRET_KEY}
ENCRYPTION_KEY=${STAGING_ENCRYPTION_KEY}

# Cleanup Configuration (conservative for staging)
AUTO_CLEANUP=false
CLEANUP_ON_SUCCESS=false
CLEANUP_ON_FAILURE=false

# Staging-specific settings
REAL_EMAIL_TESTING=true
REAL_PAYMENT_TESTING=false
MONITORING_ENABLED=true
TRACE_SAMPLING_RATE=0.1