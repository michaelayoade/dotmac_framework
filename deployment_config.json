{
  "target_server": {
    "host": "149.102.135.97",
    "ssh_port": 22,
    "ssh_user": "root",
    "deploy_path": "/opt/dotmac-tenant"
  },
  "tenant_config": {
    "tenant_id": "production-tenant-001",
    "tenant_name": "Production ISP Deployment",
    "tier": "production",
    "services": [
      "customer-management",
      "billing",
      "network-automation",
      "analytics"
    ]
  },
  "containers": {
    "isp_framework": {
      "image": "dotmac-isp:latest",
      "port": 8000,
      "env_vars": {
        "ENVIRONMENT": "production",
        "DATABASE_URL": "postgresql://isp_user:isp_secure_pass_123@postgres:5432/isp_platform",
        "ASYNC_DATABASE_URL": "postgresql+asyncpg://isp_user:isp_secure_pass_123@postgres:5432/isp_platform",
        "REDIS_URL": "redis://redis:6379/0"
      }
    },
    "postgres": {
      "image": "postgres:15",
      "port": 5432,
      "volumes": ["/opt/dotmac-tenant/data:/var/lib/postgresql/data"]
    },
    "redis": {
      "image": "redis:7-alpine",
      "port": 6379
    }
  }
}