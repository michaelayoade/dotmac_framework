# DotMac Platform Environment Configuration
# Copy this file to .env and configure with your actual values
# NEVER commit .env file to version control

# Environment
ENVIRONMENT=development
DEBUG=false

# Security - Generate strong random keys for production
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_STRONG_RANDOM_KEY
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_STRONG_RANDOM_KEY

# Database - Use strong passwords in production
DATABASE_URL=postgresql://dotmac:CHANGE_ME@postgres:5432/dotmac_db
POSTGRES_USER=dotmac
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=dotmac_db

# Redis - Use authentication in production
REDIS_URL=redis://:CHANGE_ME@redis:6379/0
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION

# OpenBao/Vault - For production secrets management
OPENBAO_ENABLED=true
OPENBAO_URL=http://openbao:8200
OPENBAO_TOKEN=CHANGE_ME_USE_APPROLE_IN_PRODUCTION
OPENBAO_ROLE_ID=
OPENBAO_SECRET_ID=

# CORS - Specify allowed origins (no wildcards in production)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100

# Monitoring
PROMETHEUS_ENABLED=true
OPENTELEMETRY_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# Service Discovery (internal ports)
IDENTITY_SERVICE_URL=http://identity:8001
BILLING_SERVICE_URL=http://billing:8002
SERVICES_SERVICE_URL=http://services:8003
NETWORKING_SERVICE_URL=http://networking:8004
ANALYTICS_SERVICE_URL=http://analytics:8005
CORE_OPS_SERVICE_URL=http://core-ops:8006
CORE_EVENTS_SERVICE_URL=http://core-events:8007
API_GATEWAY_SERVICE_URL=http://api-gateway:8000
PLATFORM_SERVICE_URL=http://platform:8008
DEVTOOLS_SERVICE_URL=http://devtools:8009